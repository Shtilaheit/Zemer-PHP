{
    "name": "metrolist/web",
    "description": "High-performance YouTube Music streaming web client",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "suggest": {
        "ext-apcu": "For better caching performance (optional, falls back to file cache)"
    },
    "autoload": {
        "psr-4": {
            "Metrolist\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
